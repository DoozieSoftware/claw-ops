# ClawOps Nginx Reverse Proxy Configuration
# Place this in ./nginx.conf and uncomment the 'proxy' service in docker-compose.prod.yml

events {
    worker_connections 1024;
}

http {
    upstream claw_gateway {
        server gateway:3000;
    }

    # Rate limiting to prevent abuse
    limit_req_zone $binary_remote_addr zone=claw_limit:10m rate=10r/s;

    server {
        listen 80;
        server_name your-domain.com; # CHANGE THIS

        # Redirect all HTTP traffic to HTTPS
        return 301 https://$host$request_uri;
    }

    server {
        listen 443 ssl http2;
        server_name your-domain.com; # CHANGE THIS

        # SSL Configuration (Use Certbot or similar to generate these)
        ssl_certificate /etc/nginx/certs/fullchain.pem;
        ssl_certificate_key /etc/nginx/certs/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;

        # Security Headers
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;
        add_header Referrer-Policy "no-referrer-when-downgrade" always;

        # Proxy Settings
        location / {
            limit_req zone=claw_limit burst=20 nodelay;
            proxy_pass http://claw_gateway;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
        }
    }
}
